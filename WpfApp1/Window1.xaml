<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar Clientes" Height="400" Width="600">
    <Grid>
        <Label Content="Nome do Cliente" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtNomeCliente" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Criar Cliente" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,50,0,0" Click="CriarCliente_Click"/>

        <ListBox Name="lstClientes" HorizontalAlignment="Left" Height="200" Margin="10,90,0,0" VerticalAlignment="Top" Width="310"/>

        <Label Content="Tipo de Conta" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,10,0,0"/>
        <ComboBox Name="cbTipoConta" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="350,30,0,0">
            <ComboBoxItem Content="Conta Corrente"/>
            <ComboBoxItem Content="Poupança"/>
        </ComboBox>

        <Button Content="Adicionar Conta" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="350,70,0,0" Click="AdicionarConta_Click"/>

        <ListBox Name="lstContasCliente" HorizontalAlignment="Left" Height="200" Margin="350,110,0,0" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
