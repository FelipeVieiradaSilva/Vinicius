<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Banco UVV" Height="350" Width="525">
    <Grid>
        <Label Content="Número da Conta" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="txtNumeroConta" HorizontalAlignment="Left" Height="23" Margin="120,10,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Valor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="txtValor" HorizontalAlignment="Left" Height="23" Margin="120,50,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Sacar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,90,0,0" Click="Sacar_Click"/>
        <Button Content="Depositar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="100,90,0,0" Click="Depositar_Click"/>
        <Button Content="Gerenciar Clientes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,150,0,0" Click="GerenciarClientes_Click"/>

    </Grid>
</Window>
